@model Lendee.Web.Features.Contract.CreditViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Rent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Úvěr</h1>

<form method="post" asp-route-contractId="@Model.Id">

    <input type="hidden" asp-for="Id" />

    <div class="form-group row">
        <label asp-for="ValidFrom" class="col-sm-2 col-form-label">Platnost od:</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ValidFrom" type="date" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ValidUntil" class="col-sm-2 col-form-label">Platnost do:</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ValidUntil" type="date" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="InterestRate" class="col-sm-2 col-form-label">Úrok:</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="InterestRate" type="number" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="PrincipalSum" class="col-sm-2 col-form-label">Jistina:</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="PrincipalSum" type="number" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Localizer["Payment Term"]</label>
        <div class="btn-group btn-group-toggle col-sm-4" data-toggle="buttons">
            <label class="btn btn-secondary @(Model.PaymentTermType == Lendee.Core.Domain.Model.PaymentTermType.Monthly ? "active" : "")">
                <input type="radio" autocomplete="off" asp-for="PaymentTermType" value="@Lendee.Core.Domain.Model.PaymentTermType.Monthly"> Monthly
            </label>
            <label class="btn btn-secondary @(Model.PaymentTermType == Lendee.Core.Domain.Model.PaymentTermType.Quaterly ? "active" : "")">
                <input type="radio" autocomplete="off" asp-for="PaymentTermType" value="@Lendee.Core.Domain.Model.PaymentTermType.Quaterly"> Quaterly
            </label>
            <label class="btn btn-secondary @(Model.PaymentTermType == Lendee.Core.Domain.Model.PaymentTermType.Annual ? "active" : "")">
                <input type="radio" autocomplete="off" asp-for="PaymentTermType" value="@Lendee.Core.Domain.Model.PaymentTermType.Annual"> Annual
            </label>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Day" class="col-sm-2 col-form-label">Splatnost do dne:</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Day" type="number" min="1" max="28" step="1" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary form-control">Uložit</button>
        </div>
    </div>
</form>