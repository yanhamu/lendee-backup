@model Lendee.Web.Features.Contract.ContractBuilderController.PaymentsViewModel
@{
    ViewData["Title"] = "Payments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Payments</h1>

<form method="post">
    <input type="hidden" asp-for="ContractId" />
    <table class="table table-sm">
        @for (int i = 0; i < Model.Payments.Count; i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td><input class="form-control" type="date" asp-for="Payments[i].DueDate" /></td>
                <td><input class="form-control" type="number" asp-for="Payments[i].Amount" /></td>
            </tr>
        }
    </table>
    <div class="form-group row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary form-control">Uložit</button>
        </div>
    </div>
</form>
