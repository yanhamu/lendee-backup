@model Lendee.Web.Features.Contract.RentViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Rent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Rent</h1>

<form method="post" asp-route-contractId="@Model.ContractId">

    <input type="hidden" asp-for="ContractId" />

    <div class="form-group row">
        <label asp-for="ValidFrom" class="col-sm-2 col-form-label">Platnost od:</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ValidFrom" type="date" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ValidUntil" class="col-sm-2 col-form-label">Platnost do:</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ValidUntil" type="date" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="PaymentAmount" class="col-sm-2 col-form-label">Splátka:</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="PaymentAmount" type="number" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">@Localizer["Payment Term"]</label>
        <div class="btn-group btn-group-toggle col-sm-4" data-toggle="buttons">
            <label class="btn btn-secondary @(Model.PaymentTerm == Lendee.Core.Domain.Model.PaymentTerm.Monthly ? "active" : "")">
                <input type="radio" autocomplete="off" asp-for="PaymentTerm" value="@Lendee.Core.Domain.Model.PaymentTerm.Monthly" > Monthly
            </label>
            <label class="btn btn-secondary @(Model.PaymentTerm == Lendee.Core.Domain.Model.PaymentTerm.Quaterly ? "active" : "")">
                <input type="radio" autocomplete="off" asp-for="PaymentTerm" value="@Lendee.Core.Domain.Model.PaymentTerm.Quaterly"> Quaterly
            </label>
            <label class="btn btn-secondary @(Model.PaymentTerm == Lendee.Core.Domain.Model.PaymentTerm.Annual ? "active" : "")">
                <input type="radio" autocomplete="off" asp-for="PaymentTerm" value="@Lendee.Core.Domain.Model.PaymentTerm.Annual"> Annual
            </label>
            <label class="btn btn-secondary @(Model.PaymentTerm == Lendee.Core.Domain.Model.PaymentTerm.Custom ? "active" : "")">
                <input type="radio" autocomplete="off" asp-for="PaymentTerm" value="@Lendee.Core.Domain.Model.PaymentTerm.Custom"> Custom
            </label>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Day" class="col-sm-2 col-form-label">Splatnost do dne:</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Day" type="number" min="1" max="28" step="1" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary form-control">Uložit</button>
        </div>
    </div>
</form>