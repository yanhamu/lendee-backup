@using Microsoft.AspNetCore.Http.Extensions
@model Lendee.Web.Features.Contract.ContractBuilderController.ContractEntityViewModel
@{
    ViewData["Title"] = "SetLendee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lendee</h1>

<form method="post" asp-route-contractId="@Model.ContractId">
    <input type="hidden" asp-for="ContractId" value="@Model.ContractId" />
    <div class="row">
        <div class="col-6">
            @foreach (var entity in Model.Entities)
            {
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Selected" value="@entity.Id" checked>
                    <label class="form-check-label" for="e-@entity.Id">
                        @entity.FirstName @entity.LastName, @entity.CompanyName, @entity.IdentifyingNumber
                    </label>
                </div>
            }
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <button type="submit" class="btn btn-primary form-control">Uložit</button>
                </div>
            </div>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="Entities" asp-action="Create" asp-route-returnUrl=@Context.Request.GetEncodedPathAndQuery()>New Contact</a>
        </div>
    </div>
</form>