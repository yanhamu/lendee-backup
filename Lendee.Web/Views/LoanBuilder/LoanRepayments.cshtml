@model Lendee.Web.Features.Contract.LoanBuilderController.RepaymentViewModel
@{
    ViewData["Title"] = "LoanRepayments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>LoanRepayments</h1>


<form method="post" asp-route-contractId="@Model.ContractId">
    <input type="hidden" asp-for="@Model.ContractId" />
    <table class="table table-sm">
        @for (int i = 0; i < Model.Repayments.Count; i++)
        {
            <tr>
                <td>
                    <input class="form-control" asp-for="@Model.Repayments[i].Due" readonly />
                </td>
                <td>
                    <input class="form-control" asp-for="@Model.Repayments[i].Amount" />
                </td>
            </tr>
        }
    </table>
    <input class="btn btn-primary" type="submit" value="save" />
</form>